@model Data.Models.Items.Weapon

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-primary-custom">Create</h1>

<h4 class="text-secondary-custom">Weapon</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="content">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<Data.Models.Enums.WeaponType>()"></select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Damage" class="control-label"></label>
                    <input asp-for="Damage" id="Damage" class="form-control default-input" readonly />
                    <span asp-validation-for="Damage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DamageType" class="control-label"></label>
                    <input asp-for="DamageType" id="DamageType" class="form-control default-input" readonly />
                    <span asp-validation-for="DamageType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Properties" class="control-label"></label>
                    <input asp-for="Properties" id="Properties" class="form-control default-input" />
                    <span asp-validation-for="Properties" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Weight" class="control-label"></label>
                    <input asp-for="Weight" id="Weight" class="form-control default-input" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" id="Description" class="form-control default-input" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Functie om velden met standaardwaarden te markeren
            function markDefaultValues() {
                $('.default-input').each(function () {
                    if ($(this).val() !== '') {
                        $(this).addClass('default-value');
                    } else {
                        $(this).removeClass('default-value');
                    }
                });
            }

            // Aanroepen bij pagina laden
            markDefaultValues();

            $('#Type').change(function () {
                var selectedType = $(this).val();
                $.ajax({
                    url: '@Url.Action("GetWeaponDetails", "Weapons")',
                    type: 'GET',
                    data: { type: selectedType },
                    success: function (data) {
                        $('#Damage').val(data.damage);
                        $('#DamageType').val(data.damageType);
                        $('#Properties').val(data.properties);
                        $('#Weight').val(data.weight);
                        $('#Description').val(data.description);

                        // Markeer velden met standaardwaarden
                        markDefaultValues();
                    }
                });
            });

            // Verwijder default-value klasse wanneer gebruiker input wijzigt
            $('.default-input').on('input', function () {
                $(this).removeClass('default-value');
            });
        });
    </script>
}
