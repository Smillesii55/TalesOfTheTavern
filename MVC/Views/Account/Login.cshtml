@model MVC.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!-- Terugknop -->
<div>
    <a href="javascript:history.back()" class="back-button" aria-label="Ga terug">
        <i class="fas fa-arrow-left"></i>
    </a>
</div>

<!-- Headersectie -->
<header class="header text-center">
    <!-- Logo -->
    <div class="logo-container">
        <img src="~/images/logo.png" alt="Logo" class="logo">
    </div>
    <!-- Quote -->
    <div class="quote-sign">
        <p>"Your inspiring quote here"</p>
    </div>
</header>

<!-- Hoofdinhoud -->
<main class="main-content">
    <!-- Auth Container voor Login Formulier -->
    <div class="auth-container">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-mailadres</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email-adress" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Remember</label>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-sign-in-alt"></i> Log In
            </button>
        </form>

        <p class="mt-3">
            Don't have an account? <a asp-action="Register">Register here</a>
        </p>
    </div>

    <!-- Auth Container voor Updatesectie -->
    <div class="auth-container">
        <h2>Updates</h2>
        <p>Any updates to the app wil be displayed here!</p>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
