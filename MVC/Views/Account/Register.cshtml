@model MVC.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="auth-container">
    <h2>Register</h2>
    <form asp-action="Register" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email Address</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Role" class="form-label">Select Role</label>
            <select asp-for="Role" class="form-control">
                <option value="">-- Select a Role --</option>
                <option value="Adventurer">Adventurer</option>
                <option value="DungeonMaster">Dungeon Master</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Register
        </button>
    </form>

    <p class="mt-3 text-center">
        Already have an account? <a asp-action="Login">Login here</a>
    </p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
